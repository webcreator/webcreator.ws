      <script>
jQuery(document).ready(function(){

	window.runAnimation = false;
	
	var blockWithAnimation = $('.last .digital-animation');

	$(blockWithAnimation).css('min-height', '430px');
  
	$(window).scroll(function() {

		var el = $(blockWithAnimation);

		   var hT = $(el).offset().top,
			   hH = $(el).outerHeight(),
			   wH = $(window).height(),
			   wS = $(this).scrollTop();
	   
	   if (wS > (hT+hH-wH)) {
	   
			if (!window.runAnimation) {

				$.each($(".devices-animation"), function(idx, el){
				
					$(el).css('display', 'none');
					
					setTimeout(function () {
					  $(el).css('display', 'block');
					  if (idx > 2) {
						window.runAnimation = true;
					  }
					});
				
					
				});
				
			
			}
	   
			
		   
	   } else {
			window.runAnimation = false;
	   }
	   
	});  
  
});
</script>

