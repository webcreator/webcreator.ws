<script async src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
<script>
    jQuery( document ).ready(function( $ ) {
	
		window.$grid = false;

        $('.tags').on( 'click', '.tag-item', function() {
            var filterValue = $( this ).attr('data-filter');
			
			if (!window.$grid) {
				window.$grid = $('.projects').isotope({
					itemSelector: '.col-md-6',
					layoutMode: 'fitRows'
				});
				console.log('init');
			}
			
            window.$grid.isotope({ filter: filterValue });
    
            $('.tag-item').each( function( i, btn ) {
                $(this).removeClass('active');
            });
    
            $( this ).addClass('active');
        });
		
    });
	
</script>
    

