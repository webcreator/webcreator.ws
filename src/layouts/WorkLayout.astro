---
import BaseLayout from "./BaseLayout.astro";
const { title, cover } = Astro.props;
---

<BaseLayout title={title}>
  <article class="case">
    {cover && <img src={cover} alt={title} />}

    <h1>{title}</h1>

    <section class="content">
      <slot />
    </section>
  </article>
</BaseLayout>